
<% content_for :extra_css do %>
<style type="text/css">
	body{
	 background-image: url('/assets/background.png');
	}
</style>
<% end %>

<div class="jumbotron">
	<h1 class="text-center text-info">School Pocket </h1>
	<h3  class="text-center">Web App to manage your grades </h3>
</div>



<div class='row'>
	<div class="col-md-4"></div>

	<div class="col-md-4">

	<h3 class="alert  alert-info text-center"> Login </h3>
	<%= form_for(:session, url:login_path, html: {class: "well well-lg form-group has-success"} ) do |f| %>
		<%= f.label :email %>
		<%= f.email_field  :email, class: 'form-control  has-success' %>
		<%= f.label :password %>
		<%= f.password_field :password, class: 'form-control  has-success' %>
		<%= f.submit "Login", class: "btn btn-primary pull-right" %>
		<br />

	<% end %>
		<%= link_to "Click here to signup", signup_path, class: "btn btn-success btn-raised center-block" %>
	</div>


	<div class="col-md-4"></div>

</div>
